@{
    ViewBag.Title = "Login Page";
}
<html>
<head>
    <title>Login</title>
    
    <link href="~/CSS/Login.css" rel="stylesheet" />
    <link href="~/CSS/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/CSS/AlertMessage/sweetalert.css" rel="stylesheet" />
</head>
<body style="background: url('../../Images/login_page_img.png') scroll center no-repeat; background-size:cover;">
    <div class="container-fluid">
        <div class="row-fluid" style="">
            <div class="col-md-7">
            </div>
            <center>
                <div class="col-md-5">
                    <div class="login-box">
                        <div class="login-logo">
                            <a>
                                <img src="~/Images/logo.png" alt="" width="326px">
                            </a>
                        </div>

                        <div class="login-box-body">
                            <p class=""><h3>Login</h3></p>

                            <div id="">
                                <div class="form-group has-feedback">
                                    <input type="text" name="username" id="txtLoginName" class="form-control i" placeholder="User Name">
                                    <span class="form-control-feedback"><i class="fa fa-user icon"></i></span>
                                    <span id="spnLoginName" class="help-block text-danger"></span>
                                </div>
                               
                                <div class="form-group has-feedback ">
                                    <input type="password" name="password" id="txtLoginPassword" onkeypress="return handleEnter(event)" class="form-control textbox" placeholder="Password">
                                    <span class=" form-control-feedback"><i class="fa fa-lock icon"></i></span>
                                    <span id="spnLoginPassword" class="help-block text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-xs-8 text-left padding-left15">
                                        New Member ? <a href="/Account/Register" >Sign Up Here</a>
                                    </div>
                                    <div class="col-xs-4 padding-right15" id="blue-button">
                                        <button type="button" class="btn btn-primary btn-block btn-flat" onclick="ValidateLogin();">Sign In</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </center>
        </div>

    </div>

</body>

</html>

<script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>

<script src="~/Scripts/AlertMessage/sweetalert-data.js"></script>
<script src="~/Scripts/AlertMessage/sweetalert.min.js"></script>
<script src="~/JS/Login.js"></script>

